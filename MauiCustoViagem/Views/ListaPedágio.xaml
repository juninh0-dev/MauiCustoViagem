<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCustoViagem.Views.ListaPedágio"
             Title="ListaPedágio">
    <VerticalStackLayout>
        <ListView x:Name="lst_local">
            <ListView.Header>
                <Grid ColumnDefinitions="*, auto">
                    <Label Grid.Column="0" Text="Local:"/>
                    <Label Grid.Column="1" Text="Valor:"/>
                </Grid>

            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="*,auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Local}"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Valor}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="btn_somar" Text="Somar"/>
        <Button x:Name="btn_AddNovo" Text="Add Novo"/>
    </VerticalStackLayout>
</ContentPage>